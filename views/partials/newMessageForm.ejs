<dialog id="postMessage">
	<form action="/messages/new-message" method="dialog">
		<label for="title">Title</label>
		<input id="title" name="title" placeholder="Title" type="text" required/>
		<label for="content">Content</label>
		<textarea name="content" id="content" placeholder="Message" required></textarea>
		<button class="mainBtn" action>Submit</button>
		<%- include("errors") %>
	</form>
</dialog>